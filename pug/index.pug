        mixin portfolio-project(number, cat, heading, desc)
            .box
                img(src="images/portfolio_0" + number + ".webp" alt="Project " + number data-categ=cat)
                .layer
                    h4 #{heading}
                    p #{desc}
                    span.categ
        mixin team-mem(name, number, order, desc)
                .box(data-person=name)
                    img(src="images/team_0" + number + ".webp" alt="Member " + order)
                    p= desc

            .skill
                .big
                    i(class=ico)
                    h4
                        | #{word1}
                        br
                        | #{word2}
                    p= paragraph
                .small
                    h4 #{skill1}
                    span
                        span(data-prog=wskill1)
                    h4 #{skill2}
                    span
                        span(data-prog=wskill2)
                    h4 #{skill3}
                    span
                        span(data-prog=wskill3)
        mixin num-box(num, word)
